{
  "manifest_version": 2,

  "name": "Analitica Magma Notifier",
  "description": "This extension alarms when there are messeages in Magma.",
  "version": "1.4",

  "permissions": [
    "tabs",
    "alarms",
	"activeTab",
	"http://*/",
    "https://*/"
  ],
	
  "background": {
    "scripts": ["eventPage.js"]
	},

  "browser_action": {
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    "dayNote.mp3",
	"nightNote.mp3"
]
}